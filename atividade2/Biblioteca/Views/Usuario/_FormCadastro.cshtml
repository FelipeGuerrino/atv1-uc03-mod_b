@model Usuario
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input type="password" asp-for="Senha" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Tipo">
                <select asp-for="Tipo" class="form-control">
                    <option value="@Usuario.ADMIN">Admin</option>
                    <option value="@Usuario.PADRAO">Padr√£o</option>
                </select>
            </label>
        </div>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>